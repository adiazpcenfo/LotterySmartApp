<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.lotterysmartapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ModifyUserActivity"></activity>
        <activity android:name=".activity.TypeUserActivity" />
        <activity android:name=".activity.RegisterSellerActivity" />
        <activity android:name=".activity.SellerListActivity" />
        <activity android:name=".activity.SearchSellerActivity" />
        <activity android:name=".activity.RegisterUserActivity" />
        <activity
            android:name=".activity.AuthenticationActivity"
            android:label="Lottery Smart"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ForgetPasswordActivity"
            android:label="@string/title_activity_forget_password"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>