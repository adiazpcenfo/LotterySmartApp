<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileUserActivity">

  <TextView
      android:id="@+id/profileLbl"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="168dp"
      android:layout_marginTop="80dp"
      android:layout_marginEnd="168dp"
      android:text="@string/perfil"
      android:textSize="30sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/nameValueLbl"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="38dp"
      android:layout_marginTop="20dp"
      android:text="nombre"
      android:textSize="22sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/nameLbl" />

  <TextView
      android:id="@+id/middleNameValueLbl"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="38dp"
      android:layout_marginTop="20dp"
      android:text="apellidos"
      android:textSize="22sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.125"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/middleNameLbl" />

  <TextView
      android:id="@+id/emailValueLbl"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="38dp"
      android:layout_marginTop="20dp"
      android:text="email"
      android:textSize="22sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.112"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/emailLbl" />

  <TextView
      android:id="@+id/nameLbl"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="38dp"
      android:layout_marginTop="44dp"
      android:text="@string/nombre"
      android:textColor="@color/profileText"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.123"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/profileLbl" />

  <TextView
      android:id="@+id/middleNameLbl"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="38dp"
      android:layout_marginTop="80dp"
      android:text="@string/apellidos"
      android:textColor="@color/profileText"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.129"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/nameLbl" />

  <TextView
      android:id="@+id/emailLbl"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="38dp"
      android:layout_marginTop="80dp"
      android:text="@string/correo_electr_nico"
      android:textColor="@color/profileText"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.192"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/middleNameLbl" />

  <Button
      android:id="@+id/buttonModifyUserProfile"
      android:layout_width="314dp"
      android:layout_height="60dp"
      android:layout_marginTop="430dp"
      android:background="@drawable/custom_search_seller_btn"
      android:text="@string/modificar_perfil"
      android:textAllCaps="false"
      android:textColor="@android:color/white"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.481"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/profileLbl" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="38dp" />

</androidx.constraintlayout.widget.ConstraintLayout>